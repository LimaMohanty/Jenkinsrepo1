pipeline {
    agent any
    
    stages {
        stage('Clone') {
            steps {
                // Clone the repository
                git url: 'https://github.com/LimaMohanty/Jenkinsrepo1.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'deploy-script.sh'
            }
        }
    
